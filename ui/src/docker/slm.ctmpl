server {
    listen       80;
    server_name  localhost;

    location /resource-management/ {
    {{ $services := service "resource-management" }}
    {{ if $services }}
        {{ range $index, $instance := $services }}
        {{ if eq $index 0 }}
        proxy_pass http://{{ .Address }}:{{ .Port }}/;
        {{ end }}
        {{ end }}
    {{ else }}
        proxy_pass {{ printf (env "RESOURCE_MANAGEMENT_URL") }};
    {{ end }}
        proxy_set_header Origin "";
    }

    location /service-management/ {
    {{ $services := service "service-management" }}
    {{ if $services }}
        {{ range $index, $instance := $services }}
        {{ if eq $index 0 }}
        proxy_pass http://{{ .Address }}:{{ .Port }}/;
        {{ end }}
        {{ end }}
    {{ else }}
        proxy_pass {{ printf (env "SERVICE_MANAGEMENT_URL") }};
    {{ end }}
        proxy_set_header Origin "";
    }

    location /notification-service/ {
    {{ $services := service "notification-service" }}
    {{ if $services }}
        {{ range $index, $instance := $services }}
        {{ if eq $index 0 }}
        proxy_pass http://{{ .Address }}:{{ .Port }}/;
        {{ end }}
        {{ end }}
    {{ else }}
        proxy_pass {{ printf (env "NOTIFICATION_SERVICE_URL") }};
    {{ end }}
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
        proxy_pass_header X-XSRF-TOKEN;
        proxy_set_header Origin "";
    }

    location /slm-catalog/ {
    {{ $services := service "catalog-service" }}
    {{ if $services }}
        {{ range $index, $instance := $services }}
        {{ if eq $index 0 }}
        proxy_pass http://{{ .Address }}:{{ .Port }}/;
        {{ end }}
        {{ end }}
    {{ else }}
        proxy_pass {{ printf (env "CATALOG_SERVICE_URL")}};
    {{ end }}
        proxy_set_header Origin "";
    }

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
        try_files $uri $uri/ /index.html;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
